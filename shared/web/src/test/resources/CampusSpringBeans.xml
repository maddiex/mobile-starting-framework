    <bean id="testCampus" class="org.kuali.mobility.campus.entity.Campus">
        <property name="code" value="TEST" />
        <property name="name" value="Test Campus" />
        <property name="tools">
            <list>
                <value>TEST_TOOL</value>
                <value>grades</value>
                <value>maps</value>
            </list>
        </property>
    </bean>

    <bean id="testCampus2" class="org.kuali.mobility.campus.entity.Campus">
        <property name="code" value="TEST2" />
        <property name="name" value="Test Campus 2" />
        <property name="tools">
            <list>
                <value>maps</value>
            </list>
        </property>
    </bean>

    <bean id="campusController" class="org.kuali.mobility.shared.controllers.CampusController">
        <property name="campusService" ref="campusService"/>
    </bean>
</beans>
