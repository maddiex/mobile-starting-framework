<!DOCTYPE taglib PUBLIC "-//Sun Microsystems, Inc.//DTD JSP Tag Library 1.2//EN" "http://java.sun.com/dtd/web-jsptaglibrary_1_2.dtd">
<taglib>

	<tlib-version>1.0</tlib-version>
	<jsp-version>2.0</jsp-version>
	<short-name>icons</short-name>
	<uri>http://opencollab.co.za/tags/icons</uri>
	<description>OpenCollab icons tag library</description>

	<tag>
		<name>iconCSS</name>
		<tag-class>coza.opencollab.mobility.tags.WebIconCSSTag</tag-class>
		<body-content>scriptless</body-content>
		<description>Inserts an icon css entry</description>
		<attribute>
			<name>icon</name>
			<required>true</required>
			<rtexprvalue>true</rtexprvalue>
			<description>The icon to insert in CSS</description>
		</attribute>
		<attribute>
			<name>size</name>
			<required>false</required>
			<rtexprvalue>true</rtexprvalue>
			<description>Size name</description>
		</attribute>
	</tag>
	
	<tag>
		<name>icon</name>
		<tag-class>coza.opencollab.mobility.tags.WebIconTag</tag-class>
		<body-content>scriptless</body-content>
		<description>Inserts an image</description>
		<attribute>
			<name>icon</name>
			<required>true</required>
			<rtexprvalue>true</rtexprvalue>
			<description>The icon to insert in CSS</description>
		</attribute>
		<attribute>
			<name>theme</name>
			<required>false</required>
			<rtexprvalue>true</rtexprvalue>
			<description>The icon to insert in CSS</description>
		</attribute>
	</tag>

</taglib>
